<!DOCTYPE html>
<html lang="en" ng-app="my-app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <title><%= full_title(yield(:title)) %></title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Latest compiled and minified CSS -->
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"> -->
    <!-- Latest compiled and minified JavaScript -->
    <!-- <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->

    <script type="text/javascript">
        var module = ons.bootstrap('my-app', ['onsen']);

        module.controller('AppController', function($scope) { });

        module.controller('DashboardController', function($scope) {
            ons.ready(function() {
                // Init code here
                $scope.fetchVacations(131, <%= @paid_vacation.year %>);
            });

            $scope.fetchVacations = function(userId, year) {
                $.ajax({
                    url: "/vacations/" + userId + "/" + year,
                    dataType: "json",
                    success: function(vacations){
                        $scope.$apply(function(){
                            $scope.vacations = vacations;
                        });
                    }
                });
            }

            $scope.showDetail = function(vacationId) {
                var options = {
                    animation: 'slide', // アニメーションの種類
                    onTransitionEnd: function() {} // アニメーションが完了した際によばれるコールバック
                };
                myNavigator.pushPage('/vacations/' + vacationId + '/edit', options);
            }

            $scope.addNewVacation = function(userId) {
                var options = {
                    animation: 'lift', // アニメーションの種類
                    onTransitionEnd: function() {} // アニメーションが完了した際によばれるコールバック
                };
                myNavigator.pushPage('/vacations/new/' + userId, options);
            }

        });

        module.controller('VacationController', function($scope) {
            $scope.createVacations = function(userId) {
                $.ajax({
                    url: "/vacations/create_ajax",
                    type:'POST',
                    data : {
                        user_id: userId,
                        date : $('#date').val(), 
                        start_time: $('#start_time').val(), 
                        end_time : $('#end_time').val(), 
                        memo : $('#memo').val(), 
                        fixed: fixed.isChecked()
                    },
                    success: function(vacations){
                        myNavigator.popPage();
                    }
                });
            }

            $scope.updateVacations = function(vacationId) {
                $.ajax({
                    url: "/vacations/update_ajax/" + vacationId,
                    type:'POST',
                    data : {
                        date : $('#date').val(), 
                        start_time: $('#start_time').val(), 
                        end_time : $('#end_time').val(), 
                        memo : $('#memo').val(), 
                        fixed: fixed.isChecked()
                    },
                    success: function(vacations){
                        myNavigator.popPage();
                    }
                });
            }

            $scope.dismissView = function() {
                myNavigator.popPage();
            }

        });
    </script>

</head>
<body ng-controller="AppController">

<%= yield %>

</body>
</html>
