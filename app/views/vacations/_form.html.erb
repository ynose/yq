<br>

<!-- 日付 -->
<div>
  <label>日付</label>
  <input class="text-input" id="date" type="date" value="<%= @vacation.start_datetime.strftime("%Y-%m-%d") %>" step="1">
</div>

<!-- 開始時刻と終了時刻 -->
<div>
  <label>開始</label>
  <input class="text-input" id="start_time" type="time" value="<%= @vacation.start_datetime.strftime("%H:%M") %>" step="180">
</div>
<div>
  <label>終了</label>
  <input class="text-input" id="end_time" type="time" value="<%= @vacation.end_datetime.strftime("%H:%M") %>" step="180">
</div>

<!-- メモ -->
<div>
  <label>メモ</label>
  <input class="text-input" id="memo" type="test" value="<%= @vacation.memo %>">
</div>

<!-- 確定 -->
<label>有給休暇</label>
<ons-switch var="fixed" <%= @vacation.fixed ? "checked": "" %>></ons-switch>

<br>

<script type="text/javascript">
  $(document).ready(function(){
    // メモのドロップダウンリストイベント
    $("#memo-list > li > a").on("click", function(e) {
      $("#memo").val($(this).text());
      e.preventDefault();
    });
  });
</script>
