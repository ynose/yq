<%# 詳細表示 %>
<div class="row text-center">
  <div class="col-xs-10 col-xs-offset-1">
    <%= @user.id %>
    <%= @user.name %>
    <%= @user.email %>
  </div>
</div>
<br />
<% if @paid_vacation != nil then %>
<div class="row text-center">
  <div class="col-xs-9 col-xs-offset-3">
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon input-sm detail-caption">繰り越し</div>
        <div class="form-control input-sm detail-value">
          <p class="form-control-static"><%= @paid_vacation.carryover_hours %>&nbsp;<small>時間</small></p>
        </div>
      </div>
      <div class="input-group">
        <div class="input-group-addon input-sm detail-caption">支給</div>
        <div class="form-control input-sm detail-value">
          <p class="form-control-static"><%= @paid_vacation.hours %>&nbsp;<small>時間</small></p>
        </div>
      </div>
      <div class="input-group">
        <div class="input-group-addon input-sm detail-caption">合計</div>
        <div class="form-control input-sm detail-value">
          <p class="form-control-static"><%= @paid_vacation.carryover_hours + @paid_vacation.hours %>&nbsp;<small>時間</small></p>
        </div>
      </div>
      <div class="input-group">
        <div class="input-group-addon input-sm detail-caption">消化</div>
        <div class="form-control input-sm detail-value">
          <p class="form-control-static"><%= @vacation_total_hours %>&nbsp;<small>時間</small></p>
        </div>
      </div>
      <div class="input-group">
        <div class="input-group-addon input-sm detail-caption">残り</div>
        <div class="form-control input-sm detail-value">
          <p class="form-control-static"><%= @paid_vacation.hours + @paid_vacation.carryover_hours - @vacation_total_hours %>&nbsp;<small>時間</small></p>
        </div>
      </div>
    </div>
  </div>    
</div>
<% end %>
