<h1>Dashboard#show</h1>
<p>Find me in app/views/dashboard/show.html.erb</p>

<div class="row">
  <div class="col-xs-12">
    <%= @user.id %>
    <%= @user.name %>
    <%= @user.email %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <% if @paid_vacation != nil then %>
    <%= @paid_vacation.year %>年度<br/>
    支給:<%= @paid_vacation.hours %>h<br/>
    繰り越し:<%= @paid_vacation.carryover_hours %>h<br/>
    合計:<%= @paid_vacation.hours + @paid_vacation.carryover_hours %>h<br/>
    <br/>
    消化:<%= @total_hours %>h<br/>
    残り:<%= @paid_vacation.hours + @paid_vacation.carryover_hours - @total_hours %>h (<%= (@paid_vacation.hours + @paid_vacation.carryover_hours - @total_hours) / 8 %>d)
    <% end %>
  </div>
</div>
<br/>
<br/>
<br/>

<!-- 有休消化リスト -->
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>user</th>
          <th>date</th>
          <th>time</th>
          <th>hours</th>
          <th>memo</th>
          <th>fixed</th>
        </tr>
      </thead>
      <% youbi = %w[日 月 火 水 木 金 土] %>
      <% @vacations.each do |vacation| %>
      <tr>
        <td><%= vacation.user_id %></td>
        <td><%= vacation.start_datetime.strftime("%m/%d(") + youbi[vacation.start_datetime.wday] + ")" %></td>
        <td><%= vacation.start_datetime.strftime("%H:%M") + " - " + vacation.end_datetime.strftime("%H:%M") %></td>
        <td><%= vacation.hours %></td>
        <td><%= vacation.memo %></td>
        <td><%= vacation.fixed %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>