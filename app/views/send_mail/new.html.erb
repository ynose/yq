<% provide(:title, "メール送信") %>

<%= form_tag('deliver/' + params[:id], :method => "post", :class => "form-horizontal") do %>
  <div class="form-group">
    <label class="col-sm-2 control-label">To: </label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @to %> &lt;Test&gt;</p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">From: </label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @from %> (Bcc:<%= @bcc %>)</p>
    </div>
  </div>

  <div class="form-group">
  	<label class="col-sm-2 control-label">Subject: </label>
    <div class="col-sm-10">
      <input name="subject" class="form-control" value="<%= @subject %>"></input>
    </div>
  </div>

  <div class="form-group">
  	<label class="col-sm-2 control-label">Body: </label>
    <div class="col-sm-10">
      <textarea name="body" class="form-control" rows="4"><%= @body %></textarea>
    </div>
  </div>
  <br>

  <%= submit_tag t('send'), method: :deliver, data: { confirm: t('deliver_confirm'), no_turbolink: true },
                               :class => "btn btn-warning btn-lg pull-right" %>

  <%= link_to t('back'), request.headers[:referer], :class => "btn btn-default", data: { no_turbolink: true } %>
<% end %>
